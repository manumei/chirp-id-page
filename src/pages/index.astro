---
import Layout from "../layouts/Layout.astro";
import AppStoreBadge from "../components/AppStoreBadge.astro";
import GooglePlayBadge from "../components/GooglePlayBadge.astro";
---

<Layout>
  <div
    class="min-h-screen flex justify-center flex-col items-center text-center px-4 bg-white dark:bg-dark-background"
  >
    <img
      src="/logo-transparent.png"
      alt="ChirpID Logo"
      class="w-24 h-24 mb-4"
    />

    <h1 class="text-3xl font-bold mb-2 text-gray-900 dark:text-dark-text">
      Discover Birds with ChirpID
    </h1>
    <p class="mb-6 text-gray-700 dark:text-dark-text-secondary max-w-md">
      Tap to identify bird species from their chirps. Download the ChirpID app
      now and start exploring nature.
    </p>

    <div class="flex gap-4 mb-10">
      <AppStoreBadge />
      <GooglePlayBadge />
    </div>

    <p class="text-xs text-gray-500 dark:text-dark-text-tertiary">
      Coming soon to more platforms
    </p>
  </div>
</Layout>
